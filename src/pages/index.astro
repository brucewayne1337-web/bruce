---
import BaseLayout from '../layouts/BaseLayout.astro'
import GameCard from '../components/GameCard.astro'
import { games } from '../data/games.js'
const featured = games.slice(0, 4)
---
<BaseLayout title={`brucewaynee – Play & Explore`} description="Informational gaming portal – 18+ only. Explore and visit external games." >
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
      <div class="absolute -top-20 -left-20 w-72 h-72 rounded-full bg-gold/10 blur-3xl"></div>
      <div class="absolute -bottom-10 -right-10 w-80 h-80 rounded-full bg-neon/10 blur-3xl"></div>
    </div>

    <div class="relative">
      <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight">
        <span class="accent-neon">brucewaynee</span>
      </h1>
      <p class="mt-3 text-white/80 max-w-2xl">A fast, clean, mobile-first game discovery portal. Informational only—18+; we do not operate or host games.</p>
      <div class="mt-6 flex gap-3">
        <a href="/games" class="btn-primary">Browse Games</a>
        <a href="/responsible" class="inline-flex items-center justify-center rounded-md px-4 py-2 font-medium border border-white/20 text-white hover:border-gold transition">
          Responsible Play
        </a>
      </div>
    </div>
  </section>

  <section class="mt-12">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold">Featured Games</h2>
      <a href="/games" class="text-sm text-gold hover:text-gold-soft">View all</a>
    </div>
    <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {featured.map((g) => (
        <GameCard {...g} />
      ))}
    </div>
  </section>
</BaseLayout>
