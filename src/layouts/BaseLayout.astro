---
import '../styles/global.css'
import { getSettings } from '../data/settings.sanity.js'
const settings = await getSettings()
const { title = 'Gaming Portal', description = 'Informational gaming discovery portal – 18+ only' } = Astro.props
const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).href : Astro.url.href
---
<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index,follow" />
    <meta name="theme-color" content="#0b0b0d" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="canonical" href={canonical} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
  </head>
  <body>
    <header class="border-b border-white/10">
      <div class="mx-auto max-w-6xl px-4 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2">
          <span class="text-xl font-bold accent-neon">{settings.brandName}</span>
        </a>
        <nav class="flex items-center gap-6 text-sm">
          <a href="/" class="text-white/80 hover:text-gold">Home</a>
          <a href="/games" class="text-white/80 hover:text-gold">Games</a>
          <a href="/about" class="text-white/80 hover:text-gold">About</a>
          <a href="/responsible" class="text-white/80 hover:text-gold">Responsible</a>
        </nav>
      </div>
    </header>

    <main class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>

    <footer class="mt-10 border-t border-white/10">
      <div class="mx-auto max-w-6xl px-4 py-8 text-sm text-white/70 space-y-2">
        <p>{settings.footerDisclaimer1}</p>
        <p>{settings.footerDisclaimer2}</p>
        <p>© {new Date().getFullYear()} <a href={settings.brandUrl} target="_blank" rel="nofollow noopener" class="text-gold hover:text-gold-soft">{settings.brandName}</a>. Trust-first discovery.</p>
      </div>
    </footer>
  </body>
  </html>
